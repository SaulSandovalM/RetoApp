<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.saul.develop.retoapp.Contacto">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="CONTACTO"
            android:textColor="@android:color/black"
            android:textAlignment="center"
            android:textSize="40dp" />

        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:layout_centerVertical="true"
            android:layout_centerHorizontal="true"
            android:textAlignment="gravity"
            android:elevation="14dp"
            >

            <ImageView
                android:layout_height="wrap_content"
                android:src="@drawable/logo"
                android:id="@+id/imageVi"
                android:layout_width="50dp" />

            <TextView
                android:text="http://empleo.hidalgo.gob.mx"
                android:layout_gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/text"
                android:textSize="15sp" />
        </android.support.v7.widget.CardView>
        <android.support.v7.widget.CardView
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:layout_centerVertical="true"
            android:layout_centerHorizontal="true"
            android:textAlignment="gravity"
            android:elevation="14dp"
            >

            <ImageView
                android:layout_height="wrap_content"
                android:src="@drawable/logo"
                android:id="@+id/imageV"
                android:layout_width="50dp" />

            <TextView
                android:text="miprimerempleo@hidalgo.gob.mx"
                android:layout_gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/te"
                android:textSize="15sp" />
        </android.support.v7.widget.CardView>
        <android.support.v7.widget.CardView
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:layout_centerVertical="true"
            android:layout_centerHorizontal="true"
            android:textAlignment="gravity"
            android:elevation="14dp">

            <ImageView
                android:layout_height="wrap_content"
                android:src="@drawable/logo"
                android:id="@+id/imageView3"
                android:layout_width="50dp" />

            <TextView
                android:text="7712323234"
                android:layout_gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/textView6"
                android:textSize="15sp" />
        </android.support.v7.widget.CardView>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="AVISO DE PRIVACIDAD"
            android:textAlignment="center"
            android:typeface="serif"
            android:textColor="@android:color/black"
            android:textSize="20dp"
            android:layout_margin="10dp"/>

    </LinearLayout>
</ScrollView>
</FrameLayout>
